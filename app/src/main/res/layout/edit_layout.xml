<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/bottom_style"
    android:layout_gravity="bottom|center"
    android:layout_height="200dp">

    <EditText
        android:id="@+id/newNameEditText"
        android:background="@drawable/edit_edittext_style"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:text="Documents.pdf"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:layout_height="60dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newNameEditText"
        android:layout_alignParentEnd="true"
        android:layout_margin="14dp"
        android:background="@drawable/scan_button_style"
        android:backgroundTint="@color/dark_light"
        android:padding="12dp"
        android:text="@string/save"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newNameEditText"
        android:layout_alignParentStart="true"
        android:layout_margin="12dp"
        android:background="@drawable/scan_button_style"
        android:backgroundTint="@color/dark_light"
        android:padding="14dp"
        android:text="@string/delete_file"
        android:textColor="@color/white" />
</RelativeLayout>